{% extends "base.html" %}

{% block cart %}
{% include 'matrr/cart/cart.html' %}
{% endblock %}

{% block login %}
{% endblock %}


{% block content %}
{% block title %}
{{ page_title }}
{% endblock %}

<form action='' method='post'>
{% csrf_token %}
{# Include the hidden fields in the form #}
{% for hidden in form.hidden_fields %}
  {{ hidden }}
{% endfor %}
<table>
{% for error in form.non_field_errors %}
  <tr><td colspan='4'>{{ error }}</td></tr>
{% endfor %}
{% for field in form.visible_fields %}
  <tr><th><label for='{{ field.html_name }}'>{{ field.label }}</label>
  {% if field.help_text %}
    <a class='tool-tip'><img src='{{ STATIC_URL }}images/help-12.png'/><span>{{ field.help_text }}</span></a>
  {% endif %}
  </th><td colspan='3'>{{ field }}</td>
  {% if field.errors %}
    <tr><td align=right>Error:</td><td class='field-error' colspan='3'>{{ field.errors }}</td>
  {% endif %}
{% endfor %}
</table>
{% block buttons %}
<button type='submit' value='Submit'>Add to cart</button>
{% endblock %}
</form>
{% endblock %}

