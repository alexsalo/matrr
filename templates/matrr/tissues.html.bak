{% extends 'matrr/tissue_shopping.html' %}

{% block content %}
  <div id="large-headline">Tissue Request</div>
  <img style="padding: 4px 5px 4px 5px" src="{{ STATIC_URL}}/images/order_timeline_2.png" width=600 height=25>

{% if cohort != None %}
<div id="headline">
{% block title %}
  Avaiable {{ title }} for cohort: {{ cohort.coh_cohort_name }}
{% endblock %}
</div>
{% endif %}


<table>
  {% for tissue in tissues.object_list %}
    <tr><td><a href='{{ tissue.get_id }}'>{{ tissue.get_name }}</a></td></tr>
  {% endfor %}
</table>
<div class="pagination">
    <span class="step-links">
        {% if tissues.has_previous %}
            <a href="?page={{ tissues.previous_page_number }}">previous</a>
        {% endif %}

        <span class="current">
            Page {{ tissues.number }} of {{ tissues.paginator.num_pages }}.
        </span>

        {% if tissues.has_next %}
            <a href="?page={{ tissues.next_page_number }}">next</a>
        {% endif %}
    </span>
</div>
{% endblock %}


